<UserControl x:Class="ShutdownManager.Views.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShutdownManager.Views"
             mc:Ignorable="d" Height="180" Width="300">


    <Viewbox>
        <Grid HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="100">
            <Rectangle x:Name="Back" Fill="#FFA0A0A0" HorizontalAlignment="Left" Height="56"  
                       VerticalAlignment="Top" Width="96" 
                       Margin="2,2,0,0" RadiusX="30" RadiusY="30" 
                       MouseLeftButtonDown="Ellipse_MouseLeftButtonDown"/>

            <Ellipse x:Name="Dot" Fill="White" HorizontalAlignment="Center" Height="46" Width="46" VerticalAlignment="Center" MouseLeftButtonDown="Ellipse_MouseLeftButtonDown"/>
        </Grid>
    </Viewbox>

</UserControl>
